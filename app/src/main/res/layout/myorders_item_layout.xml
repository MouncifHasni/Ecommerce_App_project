<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="3dp"
    android:layout_marginBottom="3dp"
    android:background="@drawable/slider_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearlayout2"
        android:layout_alignParentRight="true"
        android:padding="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/myorders_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/red_zone"/>

    </LinearLayout>

        <TextView
            android:id="@+id/myorders_title"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_alignParentLeft="true"
            android:maxLines="2"
            android:layout_toLeftOf="@id/linearlayout2"
            android:text="Sumsung s10"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_toLeftOf="@id/linearlayout2"
            android:layout_height="wrap_content"
            android:layout_below="@id/myorders_title"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/myorders_dot"
                android:layout_below="@id/myorders_title"
                android:layout_toLeftOf="@id/linearlayout2"
                android:layout_width="10dp"
                android:layout_alignParentLeft="true"
                android:layout_height="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/default_dot"
                android:tint="@color/green"/>
            <TextView
                android:id="@+id/myorders_date_delivry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:maxLines="2"
                android:layout_marginStart="2dp"
                android:text="Delivred on Mon,15th Jan 2017"/>

        </LinearLayout>



    </RelativeLayout>

</LinearLayout>