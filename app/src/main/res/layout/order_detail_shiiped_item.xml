<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearlayout4"
            android:padding="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/order_shipped_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/red_zone"/>

        </LinearLayout>

        <TextView
            android:id="@+id/order_shipped_title"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_toRightOf="@id/linearlayout4"
            android:maxLines="2"
            android:text="Sumsung s10"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_toRightOf="@id/linearlayout4"
            android:layout_below="@id/order_shipped_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/order_shipped_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/red"
                android:textSize="12sp"
                android:maxLines="2"
                android:layout_marginStart="2dp"
                android:text="200 Dhs"/>

        </LinearLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_light"/>


</LinearLayout>