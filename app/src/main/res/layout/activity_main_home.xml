<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainHomeActivity"
    android:background="@color/red">


    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_above="@id/log_img"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:elevation="3dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:id="@+id/go_to_adminSignin"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:src="@drawable/profile_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <TextView
            android:textAlignment="center"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="16dp"
            android:textSize="14sp"
            android:text="Admin"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_above="@id/log_img"
            />


    </LinearLayout>




    <ImageView
        android:id="@+id/log_img"
        android:layout_centerHorizontal="true"
        android:tint="@color/white"
        android:layout_above="@id/textview3"
        android:layout_marginBottom="60dp"
        android:src="@drawable/mylogo"
        android:elevation="3dp"
        android:layout_width="200dp"
        android:layout_height="70dp"/>

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_above="@id/go_to_signin"
        android:id="@+id/textview3"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:text="@string/app_description_main"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:layout_marginBottom="50dp"
        android:textSize="22sp"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_above="@id/go_to_signup"
        android:id="@+id/go_to_signin"
        android:text="Already have an account"
        android:layout_width="270dp"
        android:layout_centerHorizontal="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="#00BCD4"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/go_to_signup"
        android:text="Create a new account?"
        android:layout_alignParentBottom="true"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="@color/red"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:layout_marginBottom="100dp"/>

</RelativeLayout>