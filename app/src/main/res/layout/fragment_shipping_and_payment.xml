<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ShippingAndPaymentFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="150dp"
                android:textStyle="bold"
                android:paddingEnd="4dp"
                android:layout_height="wrap_content"
                android:text="Est. delivery"/>

            <TextView
                android:id="@+id/shipping_est_delivery_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New"
                android:textColor="@color/black" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:paddingEnd="4dp"
                android:text="Shipping Cost"
                android:textStyle="bold" />

        <TextView
            android:id="@+id/shipping_shipping_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Free"
            android:textColor="@color/black" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="150dp"
                android:textStyle="bold"
                android:paddingEnd="4dp"
                android:layout_height="wrap_content"
                android:text="Returns"/>

            <TextView
                android:id="@+id/shipping_returns_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accepted withing 30days"
                android:textColor="@color/black"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_marginLeft="6dp"
                android:layout_gravity="center"
                android:layout_width="150dp"
                android:textStyle="bold"
                android:paddingEnd="4dp"
                android:layout_height="wrap_content"
                android:text="Payments"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_gravity="center"
                android:id="@+id/payment_images_recyclerview"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="40dp" />

        </LinearLayout>

    </LinearLayout>




</FrameLayout>