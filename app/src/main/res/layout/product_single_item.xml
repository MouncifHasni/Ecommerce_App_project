<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:elevation="3dp"
    android:background="@drawable/slider_background"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearlayout4"
            android:padding="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/client_product_image"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:src="@drawable/red_zone"/>

        </LinearLayout>

        <TextView
            android:layout_toLeftOf="@id/linearlayout1"
            android:id="@+id/client_product__title"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_toRightOf="@id/linearlayout4"
            android:maxLines="3"
            android:text="Sumsung s10"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_marginEnd="4dp"
            android:layout_alignParentRight="true"
            android:id="@+id/linearlayout1"
            android:background="@drawable/slider_background"
            android:layout_width="wrap_content"
            android:layout_marginStart="16dp"
            android:backgroundTint="#EDF44336"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/client_product_rating"
                android:text="4.5"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginStart="3dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/star_icon"
                android:tint="#FFEB3B"
                android:layout_gravity="center"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="1dp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/client_product_quantity"
            android:layout_marginTop="4dp"
            android:layout_marginStart="16dp"
            android:layout_below="@id/client_product__title"
            android:layout_toRightOf="@id/linearlayout4"
            android:maxLines="3"
            android:text="Quantity : 12"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_toRightOf="@id/linearlayout4"
            android:layout_below="@id/client_product_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/client_product__price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/red"
                android:textSize="14sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:layout_marginStart="2dp"
                android:text="200 Dhs"/>

        </LinearLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_light"/>

</LinearLayout>