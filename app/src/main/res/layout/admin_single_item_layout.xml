<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/admin_item_modify"
            android:layout_alignParentRight="true"
            app:civ_border_color="@color/red"
            android:paddingTop="3dp"
            android:paddingRight="2dp"
            app:civ_border_width="1dp"
            android:layout_width="wrap_content"
            android:src="@drawable/modify_icon"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/admin_item_image"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/redmail_icon"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/admin_item_title"
        android:text="Infinix Note 3 Pro"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_width="85dp"
        android:maxLines="2"
        android:textColor="@color/gray"
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/admin_item_price"
        android:text="100 Dhs"
        android:textAlignment="center"
        android:maxLines="2"
        android:textSize="15sp"
        android:layout_marginTop="4dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:layout_width="150dp"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/admin_remove_item_btn"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:padding="3dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="Remove"
            android:gravity="center"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:drawablePadding="8dp"
            android:drawableEnd="@drawable/remove_icon"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:drawableTint="@color/white"/>

    </LinearLayout>


</LinearLayout>