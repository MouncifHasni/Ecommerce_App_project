<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:elevation="3dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/container0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp">
            <ImageView
                android:id="@+id/myfav_productImage"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/red_zone"/>
        </LinearLayout>

        <TextView
            android:id="@+id/myfav_item_title"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:maxLines="2"
            android:layout_marginBottom="8dp"
            android:layout_toRightOf="@id/container0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sumsung galaxy note 3"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <LinearLayout
            android:id="@+id/linearlayout3"
            android:background="@drawable/slider_background"
            android:layout_width="wrap_content"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#EDF44336"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/container0"
            android:layout_below="@id/myfav_item_title">
            <TextView
                android:id="@+id/myfav_product_rating"
                android:text="4.5"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginStart="3dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/star_icon"
                android:tint="#FFEB3B"
                android:layout_gravity="center"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="1dp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/myfav_product_nbOfrates"
            android:text="(8,500)ratings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/linearlayout3"
            android:layout_below="@id/myfav_item_title"
            android:layout_marginStart="4dp"/>

        <TextView
            android:id="@+id/myfav_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearlayout3"
            android:text="70 Dhs"
            android:layout_toRightOf="@id/container0"
            android:textColor="@color/red"
            android:textSize="13sp"
            android:layout_marginEnd="10dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/myfav_lastprice"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100 Dhs"
            android:textSize="10sp"
            android:layout_toRightOf="@id/myfav_item_price"
            android:layout_below="@id/linearlayout3"/>
        <View
            android:id="@+id/divider5"
            android:layout_below="@id/linearlayout3"
            android:layout_width="40dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/myfav_item_price"
            android:layout_height="1dp"
            android:background="#838080" />

        <LinearLayout
            android:layout_marginTop="6dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/myfav_remove_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/remove_icon"/>

        </LinearLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_light"/>


</LinearLayout>